@model IEnumerable<LibraryApp1.Models.Categories>

<h1>Categories</h1>

<table class="table">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Description</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.categoryName</td>
                <td>description</td>
            </tr>
        }
    </tbody>
</table>